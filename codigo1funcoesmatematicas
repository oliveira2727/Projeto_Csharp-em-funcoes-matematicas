using Systen;
using Systen.Globalization;

namespace cursos {
    class Program {
        static void Main(string{} args) {
    
            double  b, a, area, permientro, diagonal;
            
            b = double.Parse(Console.ReadLine(), CultureInfor.InvariantCulture);
            a = double.Parse(Console.ReadLine(), CultureInfor.InvariantCulture);

            area = b * a;
            perimento =  2 * (b + a);
            diagonal = Math.Sqrt(Math.Pow(b, 2,0) + Math.Pow(a,2,0));

            Console.Writeline("AREA =" + area.ToString("F4",CultureInfor.InvariantCulture));
            Console.Writeline("PERIMENTRO =" + perimento.ToString("F4",CultureInfor.InvariantCulture));
            Console.Writeline("DIAGONAL =" + diagonal.ToString("F4",CultureInfor.InvariantCulture));

            Console.ReadLine();
        }
}
